{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
    <h4>Categorie index</h4>

    <div class="list">
        {% for categorie in categories %}
            <div class="card">
                <p><strong>Id :</strong> {{ categorie.id }}</p>
                <p><strong>Libellé :</strong> {{ categorie.libelle }}</p>
                <div class="actions">
                    <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="warning">
                        <button>{{ include('icons/modifier.html.twig') }}</button>
                    </a>
                    {{ include('categorie/_delete_form.html.twig') }}
                </div>
            </div>
        {% else %}
            <p>No records found.</p>
        {% endfor %}
    </div>

    <a href="{{ path('app_categorie_new') }}" class="success">
        <button>Créer une catégorie</button>
    </a>
{% endblock %}