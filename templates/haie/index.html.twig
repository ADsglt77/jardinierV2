{% extends 'base.html.twig' %}

{% block title %}Haie index{% endblock %}

{% block body %}
    <h4>Haie index</h4>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prix</th>
                <th>Type</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for haie in haies %}
            <tr>
                <td>{{ haie.nom }}</td>
                <td>{{ haie.prix }}</td>
                <td>{{ haie.categorie.libelle }}</td>
                <td>
                    <a href="{{ path('app_haie_show', {'id': haie.id}) }}">voir</a>
                    <a href="{{ path('app_haie_edit', {'id': haie.id}) }}" class="modif">modifier</a>
                    {{ include('haie/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune Haie disponible</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_haie_new') }}">Cr√©er une Haie</a>
{% endblock %}
