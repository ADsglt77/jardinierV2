{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h4>User index</h4>

    <div class="list">
        {% for user in users %}
            <div class="card">
                <p><strong>Email :</strong> {{ user.email }}</p>
                <p><strong>Roles :</strong> {{ user.roles ? user.roles|json_encode : '' }}</p>
                <p><strong>Nom :</strong> {{ user.nom }}</p>
                <p><strong>Pr√©nom :</strong> {{ user.prenom }}</p>
                <p><strong>Adresse :</strong> {{ user.adresse }}</p>
                <p><strong>Ville :</strong> {{ user.ville }}</p>
                <p><strong>Code Postal :</strong> {{ user.CodeP }}</p>
                <div class="actions">
                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="info">
                        <button>{{ include('icons/voir.html.twig') }}</button>
                    </a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="warning">
                        <button>{{ include('icons/modifier.html.twig') }}</button>
                    </a>
                    {{ include('user/_delete_form.html.twig') }}
                </div>
            </div>
        {% else %}
            <p>No records found.</p>
        {% endfor %}
    </div>

    <div class="add-user">
        <a href="{{ path('app_user_new') }}" class="success">
            <button>Ajouter un Utilisateur</button>
        </a>
    </div>
{% endblock %}